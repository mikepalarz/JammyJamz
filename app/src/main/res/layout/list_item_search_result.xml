<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_item_search_result_cover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"/>
    
    <TextView
        android:id="@+id/list_item_search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/list_item_search_result_cover"
        android:text="Title"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/list_item_search_result_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/list_item_search_result_cover"
        android:layout_below="@id/list_item_search_result_title"
        android:text="Author"
        android:textSize="12sp"/>

</RelativeLayout>