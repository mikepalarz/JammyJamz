<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/base_size"
        android:layout_weight="4">

        <ListView
            android:id="@+id/app_widget_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/app_widget_no_data_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/app_widget_no_data"/>

    </FrameLayout>


    <ImageButton
        android:id="@+id/app_widget_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/base_size"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:contentDescription="@string/app_widget_content_description_button"
        android:src="@drawable/app_widget_button"/>

</LinearLayout>