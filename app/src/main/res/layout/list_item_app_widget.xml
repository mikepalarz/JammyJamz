<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_app_widget_title"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        tools:text="Head Like a Hole" />

    <TextView
        android:id="@+id/list_item_app_widget_artist"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/list_item_app_widget_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        tools:text="Nine Inch Nails" />


    <ImageView
        android:id="@+id/list_item_app_widget_artwork"
        android:layout_width="@dimen/list_item_app_widget_artwork_width"
        android:layout_height="@dimen/list_item_app_widget_artwork_height"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_artwork_placeholder"
        tools:src="@drawable/ic_artwork_placeholder" />

</RelativeLayout>